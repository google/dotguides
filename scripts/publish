#!/bin/bash

set -e

VERSION=$(node -p "require('./package.json').version")
PACKAGE_NAME="dotguides-${VERSION}.tgz"

pnpm pack

gcloud storage cp "${PACKAGE_NAME}" "gs://dotguides-preview/dotguides-${VERSION}.tgz"
gcloud storage cp "${PACKAGE_NAME}" "gs://dotguides-preview/dotguides-latest.tgz"

rm "${PACKAGE_NAME}"
